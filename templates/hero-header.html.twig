<!-- Masthead -->
<header class="masthead hero {{ headerclass|default('') }}">
    <div class="container h-100 text-light">
        <div class="row h-100 align-items-center justify-content-center text-center">
            {% block headercontent %}
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase font-weight-bold">{% trans %}Your Favorite Source of Free Bootstrap Themes{% endtrans %}</h1>
                    <hr class="divider my-5">
                </div>
                <div class="col-lg-8 col-10 pb-5 mb-5 align-self-baseline">
                    <p class="font-weight-light mb-5">{% trans %}Start Bootstrap can help you build better websites using the Bootstrap framework! Just download a theme and start customizing, no strings attached!{% endtrans %}</p>
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">{% trans %}Find Out More{% endtrans %}</a>
                </div>
            {% endblock %}
        </div>
    </div>
</header>